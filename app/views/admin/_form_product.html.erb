<%= form_for @product do |f| %>
	<div class="form-group">
		<%= f.label :nome %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :descricao %>
		<%= f.text_area :description, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :categoria %> <br>
		<%= f.select :category_id, Category.all.collect {|c| [c.name, c.id]}, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :preco %>
		<%= f.text_field :price, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :ativo? %> <br>
		<%= f.check_box :active %>
	</div>
	<div class="form-group">
		<%= f.label :novidade? %> <br>
		<%= f.check_box :news %>
	</div>
	<div class="form-group">
		<%= f.label :promocao? %> <br>
		<%= f.check_box :offer %>
	</div>
	<div class="form-group">
		<%= f.label 'preço promoção' %>
		<%= f.text_field :price_offer, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :imagem %> <br>
		<%= f.file_field :files %>
	</div>
	<div class="form-group">
		<%= f.submit :salvar, class: 'btn btn-success' %>
	</div>
<% end %>