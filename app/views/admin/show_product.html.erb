<%= render 'menu' %>

<div class="col-lg-7 col-md-7 box-admin">
	<h2 align="center"><%= @product.name %></h2><br>
	<div class="options">
		<span><%= link_to :Editar, admin_edit_product_path(@product), class: 'btn btn-warning'  %></span>
	</div>
	<%= form_for @product do |f| %>
		<div class="form-group">
			<%= f.label :nome %>
			<%= f.text_field :name, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :descricao %>
			<%= f.text_area :description, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :quantidade %>
			<%= f.number_field :amount, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :preco %>
			<%= f.text_field :price, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :novidade? %> <br>
			<%= f.select :news, (['sim', 'nao']), class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<% @product.files.each do |file| %>
				<%= image_tag file, :width=> '200px' %>
			<% end %>
		</div>
	<% end %>
</div>