<%= render 'menu' %>

<div class="container">
	<div class="col-lg-12 col-md-12 box-admin">
		<h2 align="center"><%= @product.name %></h2><br>
		<div class="options">
			<span class="btn-icon">
				<%= link_to admin_products_path do %>
					<i class="fa fa-arrow-left" title="Voltar"></i>
				<% end %>
			</span>
			<span class="btn-icon">
				<%= link_to admin_edit_product_path(@product) do %>
					<i class="fa fa-edit" title="Editar"></i>
				<% end %>
			</span>
		</div>
		<%= form_for @product do |f| %>
			<div class="form-group">
				<%= f.label :nome %>
				<%= f.text_field :name, class: 'form-control', :disabled=>true %>
			</div>
			<div class="form-group">
				<%= f.label :descricao %>
				<%= f.text_area :description, class: 'form-control', :disabled=>true %>
			</div>
			<div class="form-group">
				<%= f.label :categoria %>
				<%= text_field_tag :category, @category, class: 'form-control', :disabled=>true %>
			</div>
			<div class="form-group">
				<%= f.label :quantidade %>
				<%= f.number_field :amount, class: 'form-control', :disabled=>true %>
			</div>
			<div class="form-group">
				<%= f.label :preco %>
				<%= f.text_field :price, class: 'form-control', :disabled=>true %>
			</div>
			<div class="form-group">
				<%= f.label :ativo? %> <br>
				<%= text_field_tag :active, @active ,class: 'form-control', :disabled=>true %>
			</div>
			<div class="form-group">
				<%= f.label :novidade? %> <br>
				<%= text_field_tag :news, @news ,class: 'form-control', :disabled=>true %>
			</div>
			<div class="form-group">
				<%= f.label :promocao? %> <br>
				<%= text_field_tag :offer, @offer ,class: 'form-control', :disabled=>true %>
			</div>
			<div class="form-group">
				<%= f.label 'preço promoção' %>
				<%= f.text_field :price_offer, class: 'form-control', :disabled=>true %>
			</div>
			<div class="form-group">
				<% @product.files.each do |file| %>
					<%= image_tag file, :width=> '200px' %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>