<%= render 'menu' %>

<div class="col-lg-8 col-md-8 box-admin">
	<h2 class="label-admin"><%= @title %></h2>
	<input type="text" id="search" placeholder="Buscar Pedido" style="float: right; margin-bottom: 1em;">
	<table class="table table-bordered">
		<thead>
			<th>NÂº</th>
			<th>Data</th>
			<th>Envio</th>
			<th>Recebido</th>
			<th>Cliente</th>
			<th>Valor</th>
			<th>Status</th>
		</thead>
		<tbody id="table">
			<% @orders.each do |order| %>
			<tr>
				<td><%= order.id %></td>
				<td><%= datebr(order.created_at) %></td>
				<td><%= datebr(order.send_date) %></td>
				<td><%= datebr(order.received_date) %></td>
				<td><%= order.client.name %></td>
				<td><%= number_to_currency order.total %></td>
				<td><%= order.status %></td>
				<td><%= link_to 'Exibir', admin_orders_show_order_path(order), class: 'btn btn-primary' %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>	

<script type="text/javascript">
	$(function(){
	    $("#search").keyup(function(){
	        var texto = $(this).val();
	        $("#table tr").css("display", "table-row");
	        $("#table tr").each(function(){
	            if($(this).text().toUpperCase().indexOf(texto.toUpperCase()) < 0)
   				   $(this).css("display", "none");
	        });
	    });
	});
</script>