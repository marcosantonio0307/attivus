<%= render 'admin/menu' %>
<div class="container">
<div class="col-lg-12 col-md-12 box-admin">
	<h2 class="label-admin">Minhas Categorias</h2>
	<input type="text" id="search" placeholder="Buscar Categoria" style="float: right; margin-bottom: 1em;">
	<table class="table table-bordered">
		<thead>
			<th style="width: 200px">NÂº</th>
			<th>Nome</th>
		</thead>
		<tbody id="table">
			<% @categories.each do |category| %>
			<tr>
				<td style="width: 200px"><%= category.id %></td>
				<td><%= category.name %></td>
				<td class="btn-icon" style="width: 50px">
					<%= link_to edit_admin_category_path(category) do %>
						<i class="fa fa-edit" title="Editar"></i>
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>

<script type="text/javascript">
	$(function(){
	    $("#search").keyup(function(){
	        var texto = $(this).val();
	        $("#table tr").css("display", "table-row");
	        $("#table tr").each(function(){
	            if($(this).text().toUpperCase().indexOf(texto.toUpperCase()) < 0)
   				   $(this).css("display", "none");
	        });
	    });
	});
</script>