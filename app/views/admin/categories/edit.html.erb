<%= render 'admin/menu' %>
	
<div class="col-lg-12 col-md-12 box-admin">
	<div class="form-admin">
		<h2 class="label-admin">Nova Categoria</h2>
		<%= form_tag admin_categories_path do %>
			<div class="form-group">
				<%= label_tag :nome %>
				<%= text_field_tag :name, @category.name,class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= button_to :salvar, admin_category_path(@category), method: :put, class: 'btn btn-success' %>
			</div>
		<% end %>
	</div>
</div>

