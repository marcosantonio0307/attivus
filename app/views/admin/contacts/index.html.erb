<%= render 'admin/menu' %>
<div class="container">
<div class="col-lg-12 col-md-12 box-admin">
	<h2 class="label-admin"><%= @title %></h2>
	<input type="text" id="search" placeholder="Buscar por nome" style="float: right; margin-bottom: 1em;">
	<table class="table table-bordered">
		<thead>
			<th>NÂº</th>
			<th>Data</th>
			<th>Nome</th>
		</thead>
		<tbody id="table">
			<% @contacts.each do |contact| %>
			<tr>
				<td><%= contact.id %></td>
				<td><%= datebr contact.created_at %></td>
				<td><%= contact.name %></td>
				<td style="width: 50px;" class="btn-icon">
					<%= link_to admin_contact_path(contact) do %>
						<i class="fa fa-eye" title="Visualizar"></i>
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>

<script type="text/javascript">
	$(function(){
	    $("#search").keyup(function(){
	        var texto = $(this).val();
	        $("#table tr").css("display", "table-row");
	        $("#table tr").each(function(){
	            if($(this).text().toUpperCase().indexOf(texto.toUpperCase()) < 0)
   				   $(this).css("display", "none");
	        });
	    });
	});
</script>