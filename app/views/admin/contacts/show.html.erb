<%= render 'admin/menu' %>
<div class="container">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<div class="contact-container">
			<div class="btn-icon" style="float: right;">
				<a onclick="history.go(-1)"><i class="fa fa-arrow-left" title="Voltar"></i></a>
				<%= link_to edit_admin_contact_path(@contact) do %>
					<i class="fa fa-check" title="Confirmar Atendimento"></i>
				<% end %>
			</div>
			<h4><%= @title %></h4> <br>
			<p><b>NOME: </b><%= @contact.name %></p>
			<p><b>TELEFONE: </b><%= @contact.phone %></p>
			<p><b>EMAIL: </b><%= @contact.email %></p>
			<% if @contact.contact_type == 'professional' %>
				<p><b>CLINICA: </b><%= @contact.clinic %></p>
				<p><b>CR: </b><%= @contact.cr %></p>
				<p><b>DUVIDAS E INTERESSES: </b></p>
				<div style="border: solid 1px #e6e6e6; width: 70%; margin-bottom: 2ex; padding: 2px">
					<%= @contact.description %>
				</div>
			<% else %>
				<p><b>DESCRIÇÃO DA RECEITA: </b></p>
				<div style="border: solid 1px #e6e6e6; width: 70%; margin-bottom: 2ex; padding: 2px">
					<%= @contact.description %>
				</div>
			<% end %>
			<p><b>INFORMAÇÔES ADICIONAIS: </b></p>
			<div style="border: solid 1px #e6e6e6; width: 70%; margin-bottom: 2ex; padding: 2px">
				<%= @contact.more_informations %>
			</div>
			<% if @contact.contact_type == 'budget' %>
				<div>
					<p><b>FOTO DA RECEITA:</b></p>
					<%= link_to (image_tag @contact.file, width: '200px'), url_for(@contact.file) %>
				</div>
			<% end %>
		</div>
	</div>
</div>