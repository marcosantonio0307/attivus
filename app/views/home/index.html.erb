<div class="col-lg-11 col-md-11 col-sm-11 label-text">
	<h3>Conhe√ßa Algumas de Nossas Ofertas</h3>
</div>

<h4 class="text-center" style="margin-bottom: 3ex;">Arraste para o lado</h4>

<div class="col-lg-11 col-md-12 col-sm-12 mt-3" style="margin: 1px auto;">
	<div id="carouselSales" class="owl-carousel owl-theme">	
		<% @offers.each do |product| %>
			<div class="item">
				<%= link_to product_path(product) do %>
					<div class="card">
						<%= image_tag (product.files.last), class: 'card-img-top' %>
						<div class="card-body">
							<h4 class="card-title text-center"><%= product.name %></h4>
							<h5 class="card-text text-center">
								<% if product.offer == true %>
									<%= moneybr product.price_offer %> <span><%= moneybr product.price %></span>
								<% else %>
									<%= moneybr product.price %>
								<% end %>
							</h5>
							<%= button_to 'COMPRAR', product_path(product), method: :get, class: 'btn btn-buy card-btn' %>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
	<div class="text-center">
		<h5><%= link_to 'VEJA MAIS OFERSTAS', offers_path, class: '' %></h5>	
	</div>
</div>

