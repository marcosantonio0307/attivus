<%= form_for @contact do |f| %>
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
			<div class="budget">
			<div class="form-center">
				<%= f.hidden_field :contact_type %>
				<%= f.hidden_field :status %>
				<h1>
					<% if @contact.contact_type == 'budget' %>
						Solicite seu orçamento aqui!
						<p>Preencha o formulário abaixo e retornaremos o seu contato!</p>
					<% else %>
						Profissional da área?
						<p>Preencha o formulário abaixo para receber materiais exclusívos sobre nossos ativus.</p>
					<% end %>
				</h1>
				<div class="form-group">
					<%= f.label :nome %>
					<%= f.text_field :name, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :telefone %>
					<%= f.text_field :phone, class: 'form-control', OnKeyPress: 'format("## #####-####", this)' %>
				</div>
				<div class="form-group">
					<%= f.label :email %>
					<%= f.email_field :email, class: 'form-control' %>
				</div>
				<% if @contact.contact_type == 'professional' %>
					<div class="form-group">
						<%= f.label :clinica %>
						<%= f.text_field :clinic, class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= f.label 'CR' %>
						<%= f.text_field :cr, class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= f.label 'descreva suas dúvidas ou ativus que tem interesse' %>
						<%= f.text_area :description, class: 'form-control' %>
					</div>
				<% end %>
				<% if @contact.contact_type == 'budget' %>
					<div class="form-group">
						<%= f.label 'descrição da receita' %>
						<%= f.text_area :description, class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= f.label 'foto da receita' %> <br>
						<%= f.file_field :file %>
					</div>
				<% end %>
				<div class="form-group">
					<%= f.label 'informações adicionais' %>
					<%= f.text_field :more_informations, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.submit 'Enviar', class: 'btn btn-contact' %>
				</div>
			</div>
			</div>
		</div>
	</div>
<% end %>